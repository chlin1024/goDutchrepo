    script(src="../assets/js/plugins/perfect-scrollbar.min.js" async)
      <!-- main script file  -->
    script(src="../assets/js/argon-dashboard-tailwind.js?v=1.0.1" async)
      <!-- plugin for charts  -->
    script(src="./assets/js/plugins/chartjs.min.js" async)