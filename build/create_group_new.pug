      function onClick(){
        const groupName = document.getElementById('group_name').value;
        const groupData = {
          groupName: groupName 
        }
        $.post('/create/group', groupData, function(data){
          if (data.statusCode === 400) {
              document.querySelector('#response_data').innerHTML = JSON.stringify(data.result, null, 4);
              return;
          } else if (data.statusCode === 200) {
              //alert('成功');
              //document.querySelector('#response_data').innerHTML = JSON.stringify(data.message, null, 4);
              window.location.replace(`/group/${data.groupId}`);
          }
        })
      }
    